{
  "name": "mointering",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "start:frontend": "cd apps/frontend &&  node server.js",
    "start:backend": "cd apps/http-backend && pnpm run start",
    "start:worker": "cd apps/worker-backend && pnpm run start",
    "generate:db": "cd packages/db && npx prisma generate --schema=./prisma/schema.prisma",
    "deploy:db": "cd packages/db && npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "w": "^2.3.1"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
