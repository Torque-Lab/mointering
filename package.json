{
  "name": "mointering",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "build:http-backend": "turbo run build --filter=@sitewatch/http-backend",
    "build:worker-backend": "turbo run build --filter=@sitewatch/worker-backend",
    "build:frontend": "turbo run build --filter=@sitewatch/frontend",
    "start:frontend": "cd apps/frontend &&  node server.js",
    "start:backend": "cd apps/http-backend && npm run start",
    "start:worker": "cd apps/worker-backend && npm run start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2",
    "w": "^2.3.1"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
